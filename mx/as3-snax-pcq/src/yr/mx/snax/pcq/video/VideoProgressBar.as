package yr.mx.snax.pcq.video {	import flash.display.MovieClip;	public class VideoProgressBar extends MovieClip {		private var bLoaded:Number = 0;		private var bTotal:Number = 0;		private var bar:MovieClip;		public function VideoProgressBar() {			bar = pBar;			bar.scaleX = 0;		}		public function set byteLoaded(inNum:Number):void {			bLoaded = inNum;			updateProgress();		}		public function get byteLoaded():Number {			return bLoaded;		}		public function set byteTotal(inNum:Number):void {			bTotal = inNum;			updateProgress();		}		public function get byteTotal():Number {			return bTotal;		}		/*		method:updateProgress		Parameters:		returns:		 */		private function updateProgress():void {			var pcent:Number = Math.floor((bLoaded / bTotal) * 100);			var sc:Number = pcent / 100;			if (sc > 0 && sc < 1) {				bar.scaleX = sc;			}		}	}}